<div class="row-fluid" style="padding-bottom:10px;">
  <div class="span4" style="max-width:70px;max-height:70px;">
  <%= link_to image_tag(membre.get_avatar_url, :alt => membre.pseudo, :width => 100), membre, :class => "thumbnail" %>
  </div>
  
  <div class="span8">
    <p>
    <%= link_to membre.pseudo, membre %> 
    <% if membre.admin %><small>Admin</small><% end %>
    <br />
    <%= membre.vannes.where("valide = ?",true).count %> vannes - <%= membre.lols_count %> lols
    </p>
  </div>
</div>